<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <!--    一条朋友圈-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="30dp">
            <!--        头像-->
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/friend_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yuge"
                android:layout_marginLeft="20dp"
                android:contentDescription="profile picture"
                app:round="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <!--        名字和内容-->
                <TextView
                    android:id="@+id/friend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="雨哥到处跑"
                    android:textColor="#950D3E93"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/friend_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="随机挑战的全新系列！蹭饭挑战！无限羞耻！究极自闭！全程高能！最终章！
    第六期：BV13T4y1d741"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--        时间-->
                    <TextView
                        android:id="@+id/friend_publish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1小时前"
                        android:textSize="14dp"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <!--        点赞评论按钮-->
                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:background="@drawable/remark"
                        android:layout_marginRight="10dp"
                        android:contentDescription="remark"
                        app:round="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>